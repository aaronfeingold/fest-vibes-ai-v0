# Twitter API Configuration
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_access_token
TWITTER_ACCESS_TOKEN_SECRET=your_access_token_secret
TWITTER_BEARER_TOKEN=your_bearer_token

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key

# Anthropic Configuration (optional)
ANTHROPIC_API_KEY=your_anthropic_api_key

# Database Configuration
MONGODB_URI=mongodb://admin:password@localhost:27017/twitter_bot?authSource=admin
POSTGRES_URI=postgresql://twitter_bot:password@localhost:5432/twitter_bot
REDIS_URI=redis://localhost:6379

# Database Credentials for Docker
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=password
POSTGRES_DB=twitter_bot
POSTGRES_USER=twitter_bot
POSTGRES_PASSWORD=password

# Bot Configuration
BOT_USERNAME=your_bot_username
TARGET_LOCATION=New Orleans
LOG_LEVEL=INFO

# Rate Limiting Configuration
MAX_FOLLOWS_PER_DAY=50
MAX_POSTS_PER_DAY=10
MAX_LIKES_PER_HOUR=30
MAX_REPOSTS_PER_HOUR=15
MAX_COMMENTS_PER_HOUR=10

# Agent Thresholds
FOLLOW_THRESHOLD=0.7
LIKE_THRESHOLD=0.6
REPOST_THRESHOLD=0.8
COMMENT_THRESHOLD=0.9

# Content Configuration
CONTENT_DOMAINS=music,nola_culture,genz_trends
MIN_CONTENT_CACHE_SIZE=20
MAX_CONTENT_CACHE_SIZE=100

# Monitoring
GRAFANA_PASSWORD=admin
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# Development Settings
DEBUG=false
DEVELOPMENT_MODE=false
DRY_RUN=false