# Twitter API Configuration
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_access_token
TWITTER_ACCESS_TOKEN_SECRET=your_access_token_secret
TWITTER_BEARER_TOKEN=your_bearer_token

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key

# Anthropic Configuration (optional)
ANTHROPIC_API_KEY=your_anthropic_api_key

# Database Configuration
MONGODB_URI=mongodb://admin:password@localhost:27017/twitter_bot?authSource=admin

# Bot Operations PostgreSQL (Choose one)
# Option 1: Local PostgreSQL (Docker)
POSTGRES_URI=postgresql://twitter_bot:password@localhost:5433/twitter_bot

# Option 2: Neon PostgreSQL (Cloud) - Recommended for production
# POSTGRES_URI=postgresql://username:password@ep-xxx-xxx.us-east-1.aws.neon.tech/database_name?sslmode=require

# Events Source Database (for RAG queries - separate from bot operations)
# This should point to your events/venues database
EVENTS_POSTGRES_URI=postgresql://events_user:password@localhost:5434/events_db
# For Neon events database:
# EVENTS_POSTGRES_URI=postgresql://username:password@ep-yyy-yyy.us-east-1.aws.neon.tech/events_database?sslmode=require


# Embedding Dimensions
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSIONS=384
EMBEDDING_ENCODING_FORMAT=float

# Redis Configuration
REDIS_URI=redis://localhost:6380

# Database Connection Settings
POSTGRES_MAX_POOL_SIZE=10
POSTGRES_SSL_MODE=prefer
POSTGRES_CONNECT_TIMEOUT=30

# Events Database Connection Settings
EVENTS_POSTGRES_MAX_POOL_SIZE=5
EVENTS_POSTGRES_SSL_MODE=prefer
EVENTS_POSTGRES_CONNECT_TIMEOUT=30
USE_LOCAL_EVENTS_POSTGRES=true

# Database Credentials for Docker
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=password
POSTGRES_DB=twitter_bot
POSTGRES_USER=twitter_bot
POSTGRES_PASSWORD=password

# Bot Configuration
BOT_USERNAME=your_bot_username
TARGET_LOCATION=New Orleans
LOG_LEVEL=INFO

# Rate Limiting Configuration
MAX_FOLLOWS_PER_DAY=50
MAX_POSTS_PER_DAY=10
MAX_LIKES_PER_HOUR=30
MAX_REPOSTS_PER_HOUR=15
MAX_COMMENTS_PER_HOUR=10

# Agent Thresholds
FOLLOW_THRESHOLD=0.7
LIKE_THRESHOLD=0.6
REPOST_THRESHOLD=0.8
COMMENT_THRESHOLD=0.9

# Content Configuration
CONTENT_DOMAINS=music,nola_culture,genz_trends
MIN_CONTENT_CACHE_SIZE=20
MAX_CONTENT_CACHE_SIZE=100

# Monitoring
GRAFANA_PASSWORD=admin
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# RAG Settings
RAG_SIMILARITY_THRESHOLD=0.6
RAG_MAX_EVENTS_PER_SEARCH=12
RAG_MAX_VENUES_PER_SCHEDULE=4
RAG_SEARCH_DAYS_AHEAD=3
RAG_ENABLE_ROUTE_OPTIMIZATION=true

# Development Settings
DEBUG=false
DEVELOPMENT_MODE=false
DRY_RUN=false

# Cloud Database Settings (for production)
USE_LOCAL_POSTGRES=true
